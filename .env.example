# GitHub OAuth (required for authentication)
AUTH_GITHUB_ID=your_github_app_id
AUTH_GITHUB_SECRET=your_github_app_secret

# GitHub Token (for fetching repo updates)
GITHUB_TOKEN=your_github_token

# Database Configuration
DATABASE_URL=postgresql://meetingbot:secure_password@postgres:5432/meetingbot

# Docker Compose Deployment Mode
DEPLOYMENT_MODE=docker-compose
NODE_ENV=production

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
AUTH_SECRET=your-super-secret-jwt-secret-key-change-this-in-production
AUTH_TRUST_HOST=true
NEXTAUTH_TRUST_HOST=true

# AWS S3 / MinIO Configuration
AWS_BUCKET_NAME=meetingbot-recordings
AWS_REGION=us-east-1
S3_ENDPOINT=http://minio:9000
S3_FORCE_PATH_STYLE=true

# MinIO Credentials (must match docker-compose.yml)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123

# Docker Configuration
DOCKER_HOST=/var/run/docker.sock
BOT_NETWORK=meetingbot_network

# Additional configuration (optional)
# Set to 'true' to run with development settings
DEBUG_MODE=false